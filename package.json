{
  "name": "sqlite-clone",
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">= 18.12 <19"
  },
  "scripts": {
    "start": "node build/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "pnpm lint",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:release": "pnpm clean && tsc -p tsconfig.release.json",
    "lint": "eslint . --ext .ts --ext .mts",
    "test": "jest --coverage",
    "prettier": "prettier --config .prettierrc --write .",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "node-color-readline": "^1.0.1",
    "tslib": "~2.5",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/jest": "~29.5",
    "@types/node": "~18.16.19",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "~5.59",
    "@typescript-eslint/parser": "~5.59",
    "eslint": "~8.38",
    "eslint-config-prettier": "~8.8",
    "eslint-plugin-jest": "~27.2",
    "jest": "~29.5",
    "prettier": "~2.8",
    "rimraf": "~5.0",
    "ts-api-utils": "~0.0.44",
    "ts-jest": "~29.1",
    "typescript": "~5.0"
  },
  "volta": {
    "node": "18.12.1"
  }
}
